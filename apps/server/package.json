{
  "name": "server",
  "version": "1.0.0",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "legacy:dev": "bun run --hot src/index.ts",
    "start": "bun run dist/index.js",
    "dev": "wrangler dev --port 3000",
    "deploy": "alchemy deploy",
    "dev:alchemy": "alchemy dev"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.3.3",
    "@interviews-tool/auth": "workspace:*",
    "@interviews-tool/db": "workspace:*",
    "better-auth": "catalog:",
    "dotenv": "catalog:",
    "drizzle-orm": "^0.45.1",
    "elysia": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@interviews-tool/config": "workspace:*",
    "@interviews-tool/domain": "workspace:*",
    "@types/bun": "catalog:",
    "alchemy": "^0.81.2",
    "tsdown": "^0.16.5",
    "typescript": "^5"
  }
}
