{
  "name": "hiring-tool",
  "version": "1.0.0",
  "private": true,
  "description": "A modern web application for tracking job applications and managing hiring processes",
  "license": "MIT",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "@types/bun": "^1.3.4",
      "elysia": "^1.3.21",
      "@orpc/server": "^1.12.2",
      "@orpc/openapi": "^1.12.2",
      "@orpc/zod": "^1.12.2",
      "better-auth": "^1.4.7",
      "@orpc/client": "^1.12.2"
    }
  },
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "lint": "oxlint",
    "format": "oxfmt --write .",
    "format:tracked": "git ls-files | grep -E '\\.(ts|tsx|js|jsx|json|jsonc|md|mdx)$' | xargs oxfmt --write",
    "check": "bun run lint && bun run format",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @interviews-tool/db db:push",
    "db:studio": "turbo -F @interviews-tool/db db:studio",
    "db:generate": "turbo -F @interviews-tool/db db:generate",
    "db:migrate": "turbo -F @interviews-tool/db db:migrate"
  },
  "dependencies": {
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251213.0",
    "@types/bun": "catalog:",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "oxfmt": "^0.19.0",
    "oxlint": "^1.34.0",
    "turbo": "^2.6.3",
    "typescript": "^5"
  },
  "lint-staged": {
    "*": [
      "oxlint",
      "oxfmt --write"
    ]
  },
  "packageManager": "bun@1.3.4"
}
